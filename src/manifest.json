{
  "manifest_version": 2,
  "name": "漆黒の射手リタさんがチラチラ見てくる",
  "short_name": "rita",
  "description": "千年戦争アイギスの漆黒の射手リタさんがチラチラ見てきます。",

  "version": "1.0.0",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "vendor/jquery.js",
        "content_scripts/tira.js"
      ],
      "css": [
        "assets/tira.css"
      ]
    }
  ],

  "web_accessible_resources": [
    "assets/*.png"
  ]
}
